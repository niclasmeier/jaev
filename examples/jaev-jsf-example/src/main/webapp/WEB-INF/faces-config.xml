<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config 
    PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
	<!-- Facelets support -->
	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
	</application>
	
	<validator>
		<description>
			Validates the e-mail with the jaev framework
		</description>
		<validator-id>jaev.email</validator-id>
		<validator-class>
			com.googlecode.jaev.examples.jsf.EmailValidator
		</validator-class>
	</validator>
</faces-config>
